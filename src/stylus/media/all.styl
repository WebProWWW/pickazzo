.slider-img
    mpd()
    trans(300)
    user-select none
    cursor pointer
    max-width 100%
    height auto

.slider
    mpd(0 auto 15px)
    max-width 290px
    .slick-track
        padding-top 16px
        padding-bottom (@padding-top + 12)
    .slick-slide
        user-select none
        cursor pointer
        &:focus, &:hover, &:active
            outline none
    .slick-current
        position relative
        z-index 100
    .slick-center .slider-img
        transform scale(1.3)
        box-shadow 0 3px 8px 0 alpha(black, 50%)



.ava
    mpd(0 0 15px)
    width 70px
    height @width
    b(white, 4)
    border-radius 50%
    box-shadow 0 0 5px 0 alpha(black, 30%)
.ava-black
    mpd(0 0 15px)
